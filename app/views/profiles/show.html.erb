<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Profile pic:</strong>
  <%= image_tag(@profile.profile_pic_url(:thumbnail)) %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @profile.bio %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @profile.phone %>
</p>

<p>
  <strong>Businesses</strong>
  <% @business_profiles.each do |bp| %>
  <li><%= link_to bp.name, business_profile_path(bp) %></li>
  <% end %>
</p>

<% if current_user.profile == @profile %>
	<%= link_to 'Edit my profile', edit_profile_path(@profile), class: 'btn btn-warning' %> 
<% end %>

<%= link_to 'Create Business Profile', new_business_profile_path %>